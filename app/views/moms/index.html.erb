<html>
<!-- Page Content -->
    <div class="container">

 <!-- Page Heading -->
      <h1 class="my-4">캣맘 게시판
        <% if user_signed_in? %>
        <%= link_to '글쓰기', new_mom_path, class: 'btn btn-warning' %>
         <% else %>
            <%= link_to '글쓰기',new_user_session_url, class: 'btn btn-warning', 'data-toggle' => 'tooltip', 'data-placement' => 'top', title: '로그인 후 가능!' %>
           <%end %>
      </h1>
      
      <!-- 지역 선택 -->
      <a href='/region/서울' name='region' value = '서울'>서울</a> / <a href='/region/인천' name='region' value = '인천'>인천</a> / 
      <a href='/region/경기' name='region' value = '경기'>경기</a> / <a href='/region/강원' name='region' value = '강원'>강원</a> / 
      <a href='/region/대전' name='region' value = '대전'>대전</a> / <a href='/region/충북' name='region' value = '충북'>충북</a> / 
      <a href='/region/충남' name='region' value = '충남'>충남</a> / <a href='/region/광주' name='region' value = '광주'>광주</a> / 
      <a href='/region/전북' name='region' value = '전북'>전북</a> / <a href='/region/전남' name='region' value = '전남'>전남</a> /
      <a href='/region/울산' name='region' value = '울산'>울산</a> / <a href='/region/부산' name='region' value = '부산'>부산</a> / 
      <a href='/region/대구' name='region' value = '대구'>대구</a> / <a href='/region/경북' name='region' value = '경북'>경북</a> / 
      <a href='/region/경남' name='region' value = '경남'>경남</a> / <a href='/region/제주' name='region' value = '제주'>제주</a>
      
      <br><br>
      
<table class="table">
  <thead>
    <tr>
      <th>제목</th>
       <th>내용</th>
      <th>작성 시간</th>
      <th>조회수</th>
    </tr>
  </thead>

  <tbody>
    <% @moms.each do |mom| %>
      <tr>
        <td><%=link_to mom.title,mom %></td>
        <td><%=link_to mom.content,mom %></td>
        <td><%#= post.user.present? ? post.user.email : "n/a" %> <%= time_ago_in_words(mom.created_at) %> ago</td>
        <td>
         <%= "#{mom.impression_count}" %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


      <!-- /.row -->

      <!-- Pagination -->
<ul class="pagination justify-content-center">
    <li class="page-item">
      <%= paginate @moms ,theme: 'twitter-bootstrap-4',
                   pagination_class: "pagination-sm" %>
       </li>
   
      
    </div>
    <!-- /.container -->

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  </body>

</html>
